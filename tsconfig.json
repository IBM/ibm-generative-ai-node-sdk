{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "src",
    "examples",
    "tests"
  ],
  "files": [
    "vite.config.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
